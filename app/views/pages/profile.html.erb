<div class = "row">
   <div class ="col-xs-12">
      <div class = "jumbotron">
	<%= @username %>
      </div>
   </div>
</div>

<!--Begining of 2nd row-->
<div class = "row">
   <div class="col-xs-3">
      <div class="panel panel-default">
         <div class="panel-body">
            <p>Profiles</p>
         </div>
      </div>
   </div>

   <div class="col-xs-6">
	   <%= render '/components/post_form'%><br><br>
	<% for @p in @posts %>
      <div class="panel panel-default post-panel">
	      <div class="panel-body row">
		      <div class="col-sm-1">
			  <img src="/NewUser.png" height="50px" wigth="50px"></img>
		      </div>
		      <div class="col-sm-11">
			      <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
		          <p class="post-content"><%= @p.content %></p>
		      </div>
		      <div class="col-sm-12">
			  <p class="post-links">LINKS</p>
		      </div>
         </div>
      </div>
  <% end %>
   </div>
  
   <div class="col-xs-3">
      <div class="panel panel-default">
         <div class="panel-body">
           <p>Units</p>
        </div>
      </div>
  	 <div class="panel panel-default">
         <div class="panel-body">
           <p>Notice Board</p>
        </div>
      </div>
   </div>
</div>

